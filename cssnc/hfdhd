    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Data JS -->
    <script src="data.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const tableBody = document.getElementById("transactionTableBody");
            const addTransactionForm = document.getElementById("addTransactionForm");
            const addTransactionBtn = document.getElementById("addTransactionBtn");

            function renderTable() {
                tableBody.innerHTML = ''; // Clear existing rows
                transactions.forEach(transaction => {
                    const row = tableBody.insertRow();
                    row.innerHTML = `
                        <td><input type="checkbox"></td>
                        <td>
                            <button class="btn btn-sm btn-info"><i class="bi bi-eye"></i></button>
                            <button class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </td>
                        <td>${transaction.id}</td>
                        <td>${transaction.customer}</td>
                        <td>${transaction.employee}</td>
                        <td>${transaction.amount.toLocaleString("vi-VN")}</td>
                        <td>${transaction.date}</td>
                        <td>${transaction.result}</td>
                    `;
                });
            }

            renderTable();

            addTransactionBtn.addEventListener("click", function() {
                const customerName = document.getElementById("customerName");
                const employeeName = document.getElementById("employeeName");
                const amount = document.getElementById("amount");

                let isValid = true;

                // Validate Customer Name
                if (customerName.value.trim() === '') {
                    customerName.classList.add('is-invalid');
                    document.getElementById('customerNameFeedback').innerText = 'Tên khách hàng không được để trống.';
                    isValid = false;
                } else if (customerName.value.length > 30) {
                    customerName.classList.add('is-invalid');
                    document.getElementById('customerNameFeedback').innerText = 'Tên khách hàng không được quá 30 ký tự.';
                    isValid = false;
                } else {
                    customerName.classList.remove('is-invalid');
                    document.getElementById('customerNameFeedback').innerText = '';
                }

                // Validate Employee Name
                if (employeeName.value.trim() === '') {
                    employeeName.classList.add('is-invalid');
                    document.getElementById('employeeNameFeedback').innerText = 'Tên nhân viên không được để trống.';
                    isValid = false;
                } else if (employeeName.value.length > 30) {
                    employeeName.classList.add('is-invalid');
                    document.getElementById('employeeNameFeedback').innerText = 'Tên nhân viên không được quá 30 ký tự.';
                    isValid = false;
                } else {
                    employeeName.classList.remove('is-invalid');
                    document.getElementById('employeeNameFeedback').innerText = '';
                }

                // Validate Amount
                if (amount.value.trim() === '' || isNaN(amount.value) || parseFloat(amount.value) <= 0) {
                    amount.classList.add('is-invalid');
                    document.getElementById('amountFeedback').innerText = 'Số tiền không hợp lệ.';
                    isValid = false;
                } else {
                    amount.classList.remove('is-invalid');
                    document.getElementById('amountFeedback').innerText = '';
                }

                if (isValid) {
                    // Add new transaction (for now, just log and close modal)
                    const newTransaction = {
                        id: transactions.length > 0 ? Math.max(...transactions.map(t => t.id)) + 1 : 1000,
                        customer: customerName.value.trim(),
                        employee: employeeName.value.trim(),
                        amount: parseFloat(amount.value),
                        date: new Date().toLocaleString('vi-VN'),
                        result: ''
                    };
                    transactions.push(newTransaction);
                    renderTable();
                    addTransactionForm.reset();
                    var myModal = bootstrap.Modal.getInstance(document.getElementById("addTransactionModal"));
                    myModal.hide();
                    alert('Thêm giao dịch thành công!');
                }
            });
        });
    </script>
